{
  "name": "aft-front",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "12.22.12",
    "npm": "6.14.4"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/user-event": "^13.5.0",
    "chance": "^1.1.8",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-jwt": "^1.1.6",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check-dependencies": "./node_modules/.bin/madge --circular ./src",
    "lint": "eslint ./src ./tests --max-warnings=0",
    "test": "jest -c jest.config.js --forceExit",
    "test:watch": "jest --watchAll",
    "prepare-release": "./tasks/prepare-release",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test:coverage": "jest -c jest.config.js --coverage --forceExit",
    "test:ci": "jest --ci --forceExit --reporters='default' --reporters='./github-actions-reporter'",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commit-message-validator",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint -- --max-warnings=0 && npm run test:coverage"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "npm run lint --max-warnings=0"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^\\[AFTF-[\\d]+\\]\\s.*$",
      "errorMessage": "Invalid commit message. Valid example: [AFT-123] Fix typo"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/react": "^13.1.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "babel-jest": "^28.0.1",
    "commit-message-validator": "^1.0.2",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-unobtrusive": "^1.2.5",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.8.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^7.0.4",
    "jest": "^28.0.1",
    "jest-environment-jsdom": "^28.0.2",
    "lint-staged": "^11.2.6",
    "madge": "^5.0.1",
    "prettier": "^2.7.1",
    "vite": "^2.9.5",
    "whatwg-fetch": "^3.6.2"
  }
}
